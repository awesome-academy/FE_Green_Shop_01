doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		title Green Shop
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js')
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')

		//- Font-awesome
		link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.6.3/css/all.css', integrity='sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/', crossorigin='anonymous')

		link(rel='stylesheet', type='text/css', href='../maincss/registration.css')
		//- Font-family
		link(href='https://fonts.googleapis.com/css?family=Rochester', rel='stylesheet')
		
	body
		.container-fluid
			include ../import/header
			
			#link_page.row
				.container
					.visited_name.row 
						p Home
						span Đăng ký
			#content.row
				.container
					.row
						.left.col-md-6
							.title.row
								p Thông tin cá nhân
							.name.row
								a Họ và tên
									i.fas.fa-star-of-life
								input.textbox(type='textbox')
							.email.row
								a Địa chỉ email
									i.fas.fa-star-of-life
								input.textbox(type='textbox')
							.remember.row
								label.container
									p Đăng ký nhận thông tin qua email
									input.checkbox(type='checkbox')
									span.checkmark

							.title.row
								p Thông tin tài khoản
							.password.row
								a Mật khẩu
									i.fas.fa-star-of-life
								input.textbox(type='textbox')
							.button_row.row
								.return
									.return_btn Quay lại
								.register
									.register_btn Đăng ký

						.right.col-md-6
							.phone.row
								a Số ĐT
									i.fas.fa-star-of-life
								input.textbox(type='textbox')
							.website.row
								a Website của bạn
									i.fas.fa-star-of-life
								input.textbox(type='textbox')
							.confirm_pd.row
								a Nhập lại mật khẩu
									i.fas.fa-star-of-life
								input.textbox(type='textbox')
							

			include ../import/footer

